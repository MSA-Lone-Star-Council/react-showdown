{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.school.com/schoolNew.schema.json",
  "type": "object",
  "properties": {
    "school_handle": {
      "type": "string",
      "minLength": 1,
      "maxLength": 10
    },
    "school_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "city": {
      "type": "string"
    },
    "state": {
      "type": "string"
    },
    "logoUrl": {
      "type": "string",
      "format": "uri"
    },
    "facebook_url": {
      "type": "string"
    },
    "instagram_url": {
      "type": "string"
    }
  },
  "additionalProperties": true,
  "required": [
    "school_handle",
    "school_name",
    "city",
    "state"
  ]
}
